@model IEnumerable<ServiceProvide.Models.ServiceProvider>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome My Service Provide</h1>
    <br />
    <br />
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card col-sm-4" style="margin:10px">
            <div class="card-body">
                <h5 class="card-title">@item.Service.Name</h5>
                <p class="card-text">@item.Service.Descrption</p>
                <small class="text-secondary"><b>@item.ApplicationUser.FullName</b> : مقدم الخدمة</small><hr />
                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="~/Orders/UserOrder/@item.Service.Id" class="btn btn-success">اطلب الان</a>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Register</a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login</a>
                }
            </div>
        </div>
    }
</div>


